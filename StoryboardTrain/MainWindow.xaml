<Window x:Class="StoryboardTrain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryboardTrain"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="352*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3">
            <Menu x:Name="menu">
                <MenuItem Header="ファイル(_F)">
                    <MenuItem Header="終了" />
                </MenuItem>
            </Menu>

        </StackPanel>
        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto" >
            <StackPanel></StackPanel>
        </ScrollViewer>
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Center" Margin="0.143,0,0,0.143"  />
        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0.429,0.143">

        </StackPanel>

    </Grid>
</Window>
